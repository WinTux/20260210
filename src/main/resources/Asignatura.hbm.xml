<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
  "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
  "https://hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping schema="pregrado">
	<class name="com.pepe.j.Models.Asignatura" table="Asignatura">
		<id name="Sigla" type="string" column="Sigla" length="6"></id>
		<property name="Titulo" type="string" column="Titulo" not-null="true" length="100"/>
		<property name="Descripcion" type="text" column="Descripcion"/>
		<property name="Creditos" type="int" column="Creditos"/>
		<many-to-one name="carrerita" class="com.pepe.j.Models.Carrera" column="CarreraID"/>
		<set name="inscripciones" table="Inscripcion" cascade="all-delete-orphan">
			<key column="AsignaturaID"/>
			<one-to-many class="com.pepe.j.Models.Inscripcion"/>
		</set>
	</class>
</hibernate-mapping>